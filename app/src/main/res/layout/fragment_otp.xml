<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.OtpFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Verify "
        android:id="@+id/showNum"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#018A33"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Waiting For Otp. Send via SMS To Your Mobile Number Please Enter The OTP"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_margin="40dp"/>


<!--<EditText-->
<!--    android:layout_width="wrap_content"-->
<!--    android:layout_height="wrap_content"-->
<!--    android:maxEms="6"-->
<!--    android:layout_gravity="center"-->
<!--    android:hint="Enter OTP"-->
<!--    android:textColorHint="@color/themeColor"-->
<!--    android:inputType="number"/>-->


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/getOtp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Enter OTP"
        app:helperText=" Enter OTP"
        android:foregroundTint="@color/themeColor"
        android:backgroundTint="@color/themeColor"
        app:hintTextColor="@color/themeColor"
        app:helperTextEnabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.3">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="6"
            android:layout_margin="5dp" />
    </com.google.android.material.textfield.TextInputLayout>



<androidx.appcompat.widget.AppCompatButton
    android:layout_width="100dp"
    android:layout_height="40dp"
    android:id="@+id/verifyBtn"
    android:text="VERIFY"
    android:layout_marginTop="50dp"
    android:layout_gravity="center"
    android:background="#09D654"
    android:textColor="@color/white"/>



</LinearLayout>